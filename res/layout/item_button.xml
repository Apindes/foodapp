<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="200dp"
              android:layout_height="60dp"
              android:textColor="#ff3c3f41"
              android:textStyle="bold"
              android:orientation="horizontal">

        <Button
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:text="food name"
                android:id="@+id/button" android:textSize="17dp"
                android:textColor="#ffffffff" android:textStyle="bold" android:layout_gravity="left"
                android:layout_marginLeft="-5dp" android:maxLines="2" android:background="#2a6e6f69"
                android:maxWidth="130dp" android:gravity="left" android:paddingLeft="10dp" android:paddingTop="13dp"/>
        <TextView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:text="100"
                android:id="@+id/gramRowTV" android:textColor="#ffffffff"
                android:textSize="14dp" android:layout_marginTop="18dp" android:maxLines="1" android:maxWidth="40dp"
                android:textStyle="bold" android:paddingLeft="5dp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1.0"
                android:id="@+id/XeRowTV"
                android:textColor="#ffff3e5d"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="-12dp"
                android:maxLines="1"
                android:maxWidth="70dp"
                android:paddingLeft="5dp"/>
    <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/calloriesRowHiddenTV" android:visibility="invisible" android:textColor="#fffff7fa"
            android:textStyle="bold" android:layout_marginTop="18dp"/>
</LinearLayout>